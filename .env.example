# Google OAuth Credentials
# Get these from Google Cloud Console -> APIs & Services -> Credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"

# Apple Sign In Credentials
# Get these from your Apple Developer account
NEXT_PUBLIC_APPLE_CLIENT_ID="YOUR_APPLE_SERVICE_ID" # e.g., com.yourdomain.app
NEXT_PUBLIC_APPLE_REDIRECT_URI="https://yourdomain.com/auth/apple/callback" # Must be a real, verified URL

# NextAuth Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here" # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000" # Your app URL

# Backend URL
BACKEND_URL="http://localhost:5000"

# Twilio Configuration (for phone auth)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="your_twilio_phone_number" # In E.164 format (+1234567890)
# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Apple Sign In Configuration
# Apple Services ID (client ID) from Apple Developer Console
APPLE_ID=your_apple_services_id_here

# Apple Client Secret (private key) from Apple Developer Console
APPLE_SECRET=your_apple_client_secret_here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# JWT (for existing system compatibility)
JWT_SECRET=your_jwt_secret_here